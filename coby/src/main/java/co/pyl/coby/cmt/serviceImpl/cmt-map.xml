<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.pyl.coby.cmt.service.CmtMapper">
	<select id="cmtSelectList" resultType="co.pyl.coby.cmt.vo.CmtVO">
		select cmt_content, cmt_date from cb_cmt where board_id = #{boardId}
	</select>

	<select id="cmtSelect" resultType="co.pyl.coby.cmt.vo.CmtVO">
		select cmt_content, cmt_date from cb_cmt where board_id = #{boardId} 
	</select>

	<insert id="cmtInsert" parameterType="co.pyl.coby.cmt.vo.CmtVO">
		insert into
		cb_cmt(cmt_id,cmt_title,cmt_content,cmt_date,user_id)
		values(#{cmtId},#{cmtTitle},#{cmtContent},#{cmtDate},#{userId})
	</insert>

	<update id="cmtUpdate" parameterType="co.pyl.coby.cmt.vo.CmtVO">
		update cb_cmt set
		cmt_content = #{cmtContent} where cmt_id=#{cmtId}
	</update>

	<delete id="cmtDelete" parameterType="co.pyl.coby.cmt.vo.CmtVO">
		delete from cb_cmt where
		cmt_id = #{cmtId}
	</delete>

</mapper>