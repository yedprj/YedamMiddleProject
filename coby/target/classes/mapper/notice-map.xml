<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="co.pyl.coby.notice.service.NoticeMapper">
	<select id="noticeSelectList" resultType="co.pyl.coby.vo.NoticeVO">
		select * from cb_notice 
	</select>
	
	<select id="noticeSelect" resultType="co.pyl.coby.vo.NoticeVO">
		select * from cb_notice where user_id = #{user_id}
	</select>
	
	<insert id="noticeInsert" parameterType="co.pyl.coby.vo.NoticeVO">
		insert into cb_notice(n_seq,) values(#{n_seq},#{notice_title},#{notice_content},#{notice_date},#{notice_writer})
	</insert>
	
	<update id="noticeUpdate" parameterType="co.pyl.coby.vo.NoticeVO">
		update cb_notice set notice_content = #{notice_content} where notice_id=#{notice_id}
	</update>
	
	<delete id="noticeDelete" parameterType="co.pyl.coby.vo.NoticeVO">
		delete from cb_notice where id=#{id}
	</delete>
</mapper>