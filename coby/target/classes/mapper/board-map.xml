<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="co.pyl.coby.board.service.BoardMapper">
	<select id="boardSelectList" resultType="co.pyl.coby.vo.BoardVO">
		select * from cb_board 
	</select>
	
	<select id="boardSelect" resultType="co.pyl.coby.vo.BoardVO">
		select * from cb_board where board_id = #{board_id}
	</select>
	
	<insert id="boardInsert" parameterType="co.pyl.coby.vo.BoardVO">
		insert into cb_board(bd_seq,board_title,board_content,board_date,board_writer) values(#{bd_seq},#{board_title},#{board_content},#{board_date},#{board_writer})
	</insert>
	
	<update id="boardUpdate" parameterType="co.pyl.coby.vo.BoardVO">
		update cb_board set board_content = #{board_content} where board_id=#{board_id}
	</update>
	
	<delete id="boardDelete" parameterType="co.pyl.coby.vo.BoardVO">
		delete from cb_board where id=#{id}
	</delete>
</mapper>